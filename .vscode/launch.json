  "version": "0.2.0",
  "configurations": [
    {
      "name": "aves-play",
      "type": "dart",
      "request": "launch",
      "args": ["--flavor", "play"],
      "program": "lib/main_play.dart"
    },
    {
      "name": "aves-play-attach",
      "request": "attach", // Attach instead of launching
      "type": "dart",
      "packages": ".dart_tool/package_config.json",
      "program": "lib/main_play.dart",
    },
    {
      "name": "aves (profile mode)",
      "request": "launch",
      "type": "dart",
      "flutterMode": "profile"
    },
    {
      "name": "release-aves",
      "request": "launch",
      "type": "dart",
      "args": ["--flavor", "play"],
      "flutterMode": "release",
      "program": "lib/main_play.dart"
    }
  ]
}